<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:id="@+id/profile_Id_Entry"
        android:hint="enter prifile Id"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/eventNameEntry"
        android:hint="enter event Name"
        android:layout_below="@id/profile_Id_Entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/eventPlaceEntry"
        android:hint="enter place name"
        android:layout_below="@id/eventNameEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/eventStartEntry"
        android:hint="enter start date"
        android:layout_below="@id/eventPlaceEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/eventEndEntry"
        android:hint="enter end date"
        android:inputType="phone"
        android:layout_below="@id/eventStartEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/budgetEntry"
        android:hint="enter budget"
        android:layout_below="@id/eventEndEntry"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/saveBtn"
        android:text="save"
        android:onClick="save"
        android:layout_below="@id/budgetEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>